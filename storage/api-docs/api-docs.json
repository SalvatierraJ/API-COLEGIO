        "/regiones": {
            "get": {
                "tags": [
                    "Regiones"
                ],
                "summary": "Listar regiones",
                "description": "Devuelve el listado de regiones. Si se pasa ?include=comunas, incluye el arreglo de comunas por región.",
                "operationId": "082ff02021dacbf7f09374360d895e3a",
                "parameters": [
                    {
                        "name": "include",
                        "in": "query",
                        "description": "Incluir relaciones",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "comunas"
                            ]
                        },
                        "example": "comunas"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Listado de regiones",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/RegionsResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/regiones/{regionId}/comunas": {
            "get": {
                "tags": [
                    "Regiones"
                ],
                "summary": "Obtener comunas por ID de región",
                "description": "Devuelve la región solicitada con su arreglo de comunas.",
                "operationId": "85db33b6b2eb806a427cf93a934751ae",
                "parameters": [
                    {
                        "name": "regionId",
                        "in": "path",
                        "description": "ID de la región",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "example": 13
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Región con comunas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/RegionResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "No encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorMessage"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Registrar un nuevo usuario",
                "description": "Crea un usuario con nombre de usuario y contraseña.",
                "operationId": "4fba3074740898952b34e5b9a9681f5b",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "nombre_usuario",
                                    "password"
                                ],
                                "properties": {
                                    "nombre_usuario": {
                                        "type": "string",
                                        "example": "javier01"
                                    },
                                    "password": {
                                        "type": "string",
                                        "minLength": 6,
                                        "example": "12345678"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuario creado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UsuarioSimple"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validación fallida"
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Iniciar sesión",
                "description": "Devuelve un JWT si las credenciales son válidas.",
                "operationId": "1452175972331d50d10251ae20dfb50c",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "nombre_usuario",
                                    "password"
                                ],
                                "properties": {
                                    "nombre_usuario": {
                                        "type": "string",
                                        "example": "javier01"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "12345678"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/TokenResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Credenciales inválidas"
                    }
                }
            }
        },
        "/auth/me": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Obtener perfil del usuario autenticado",
                "operationId": "50ccc9534364638c5ddb9dc2d36ef4fd",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UsuarioPerfil"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "No autenticado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/auth/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Cerrar sesión",
                "operationId": "c463b3f92305ea956710196b78019520",
                "responses": {
                    "200": {
                        "description": "Sesión cerrada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/MessageResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "No autenticado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
